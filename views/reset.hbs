  <title>f o l i o. - Forgot Password</title>
</head>
<body>
  <div class="vertical-center hidden">
      <!--REGISTRATION -->
      <div class="container" id = 'reg_avatar' align = "center">

        <div class="container" id="class_folio">
        <h1><span id="next"></span></h1>
        <script>
        $('document').ready(function(){
          var typed = new Typed('#next', {
            strings:['Change your password'],
            backSpeed: 40,
            typeSpeed: 55,
            onComplete: function () {
              $(".typed-cursor").hide();
            }
          });
        });
        </script>
      </div>
        <!-- REGISTERED USER'S LOG-IN -->
      <form method="POST" action="/confresetpass">
        <div class="form-group">
          <label for="newpass_">New Password</label>
          <input type="password" class="form-control" name="newpass_" id="newpass_" placeholder="New Password">
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Confirm Password</label>
          <input type="password" class="form-control" id="newcp_" placeholder="Confirm Password">
        </div>
          <input type="hidden" value="{{email}}" name="email_">
          <input type="hidden" value="{{token}}" name="token_">

        <button id='submitNewPassBtn' type="submit" class="btn btn-secondary">Submit</button>
      </form>  
        <hr>
      </div>
  </div>

</body>
