<!--ADD POST MODAL-->
  <div class="modal fade" id="postModal" role="dialog">
    <div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable">

      <div class="modal-content ">
        <!-- Modal body -->
        <div class="modal-post-container">
          <div class="modal-header">
            Add Post
          </div>
          <form id='addPostForm'method='POST'>

          
          <input name='upload' class='filepond' type='file'> 

          <div class="modal-post-fields">
            <input name = 'post_title'class="addposttitle form-control mr-sm-2" type="text" placeholder="title">
          </div>
            <textarea name = 'descriptor' form ='addPostForm' wrap='hard' class="addpostdesc form-control mr-sm-2" type="text" placeholder="description"></textarea>
          <div class="addpost-button">
            <button type="submit" class="addpostbtn btn btn-secondary">Post</button>
          </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!--EDIT POST MODAL-->
  <div class="modal fade" id="editModal" role="dialog">
    <div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable">

      <div class="modal-content row">
        <!-- Modal body -->
        <div class="modal-post-header">
          <div class="pic-row">
            <img class="fill-row" src="img/post1.jpg">
          </div>
        </div>

        <div class="modal-post-container">
          <div class="modal-header">
            Edit Post
          </div>

          <div class="modal-post-fields">
            <input class="addposttitle form-control mr-sm-2" type="text" aria-label="Search">
            <input class="addpostdesc form-control mr-sm-2" type="text" aria-label="Search">
          </div>
          <div class="addpost-button">
            <button type="button" class="editpostbtn btn btn-secondary">Edit Post</button>
          </div>
        </div>
      </div>
    </div>
  </div>