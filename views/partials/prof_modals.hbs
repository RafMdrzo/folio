<!--ACCOUNT SETTINGS MODAL-->
<div class="modal fade" id="accset" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-l modal-dialog-centered modal-dialog-scrollable" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h6 class="modal-title acc-set-title">Account Settings</h6>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>


      <div class="modal-body" >
        <div class="col">
          <button title="You can only perform these actions one at a time" class="btn btn-primary confidential btn-lg btn-block" data-toggle="collapse"
          href="#emailform" role="button" aria-expanded="false" aria-controls="multiCollapseExample1">Change Email</button>

          <div class="collapse multi-collapse" id="emailform">
            <form  method='POST' action='/editemail'>
              <div class="form-group">
                <label for="mailing">Email address</label>
                <input name='newemail' type="email" class="form-control" id="newmail" aria-describedby="emailHelp" placeholder="Enter email">
              </div>
              <button type='submit' class="btn btn-secondary confidential btn-lg"
              role="button" aria-expanded="false" aria-controls="multiCollapseExample1">Submit New Email</button>
            </form>
          </div>
        </div>
        <div class="col">
          <button title="You can only perform these actions one at a time" class="btn btn-primary confidential btn-lg btn-block" data-toggle="collapse"
          href="#pwform" role="button" aria-expanded="false" aria-controls="multiCollapseExample1">Change Password</button>


          <div class="collapse multi-collapse" id="pwform">
            <form method='POST' action='/changepassword'>
              <div class="form-group">
                <label for="pass">Password</label>
                <input name="newpass" type="password" class="form-control" id="newpass" placeholder="Password">
              </div>

              <div class="form-group">
                <label for="pass">Confirm Password</label>
                <input name="confpass" type="password" class="form-control" id="conf_newpass" placeholder="Confirm Password">
              </div>
              <button type='submit' class="btn btn-secondary confidential btn-lg"
              role="button" aria-expanded="false" aria-controls="multiCollapseExample1">Submit New Password</button>
            </form>
          </div>
        </div>
        <div class="col">
          <footer>
            <form method='POST' action='/deleteuser'>
              <button type='submit' class="btn btn-danger confidential btn-lg btn-block">
                Delete Account
              </button>
            </form>

          </footer>
        </div>

      </div>

      <!-- ACC SETTINGS FOOTER-->
      <div class="modal-footer edit-done">
        <button type="button" class="btn btn-light" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<!--PROFILE SETTINGS MODAL-->
<div class="modal fade" id="profset" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable" role="document">
    <div class="modal-content">
      <div class="modal-post-container-add">
        <h6 class="modal-title prof-set-title">Profile Settings</h6>
        <div class="modal-post-container-add-content">
          <form method='POST' action='/editprofile' class="form form-vertical">
            <div class="row">
              <div class="row-cont">
                <div class="col-sm-4 text-center dp-cont" id="prof-field">
                  <div title="Leave blank if you do not want to change your avatar" class="custom-prof-pic-cont">
                    <input type='file' name='newavatar'  class='filepond editfilepond' id="imgInp">
                  </div>
                </div>

                <div class="col-8" id="prof-field">
                  <div class="form-group new-data">
                    <label for="userName">Username</label>
                    <input value={{this.username}} name='newhandle' type="text" class="form-control text-center" id="newhandle" placeholder="New username">
                  </div>

                  <div class="form-group new-data">
                    <label for="newbio">Bio</label>
                    <textarea name = 'newbio' type="text" class="form-control text-center" id="newbio" placeholder="Bio">{{this.bio}}</textarea>
                  </div>

                  <div class="form-group new-data">
                    <label for="newloc">Location</label>
                    <input value={{this.location}} name='newloc' type="text" class="form-control text-center" id="newloc" placeholder="Location">
                  </div>
                </div>
              </div>

            </div>
            <div class="modal-footer edit-done">
              <button type="button" class="delpostbtn btn btn-light" data-dismiss="modal">Cancel</button>
              <button type="submit" class="addpostbtn btn btn-secondary" id="save-dat">Save</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>



